#!/bin/sh

pad_size ()
{
    while read -r SIZE NAME; do
        printf "%020d %s\n" "$SIZE" "$NAME"
    done
}
show_list ()
{
    while read -r SIZE NAME; do
        set -- "$@" "$NAME"
    done
    du -s --human-readable "$@"
}

if du -s "$@" > /dev/null 2>&1; then
    du -s "$@" | pad_size | sort | show_list
else
    du -s "$@" > /dev/null
fi
