#!/bin/sh

set -e

shift $#

set -- "$@" "tmux"               # Terminal multiplexer
set -- "$@" "vim"                # Vi IMproved - enhanced vi editor
set -- "$@" "vim-gui-common"     # Vi IMproved - enhanced vi editor - common gui files
set -- "$@" "git"                # Fast, scalable, distributed revision control system
set -- "$@" "make"               # Utility for directing compilation
set -- "$@" "curl"               # Command line tool for transferring data with URL syntax
set -- "$@" "aria2"              # High speed download utility
set -- "$@" "7zip"               # 7-Zip file archiver with a high compression ratio
set -- "$@" "7zip-rar"           # RAR plugin for 7-Zip
set -- "$@" "ffmpeg"             # Tools for transcoding, streaming and playing of multimedia files
set -- "$@" "qemu-system-x86"    # QEMU full system emulation binaries (x86)
set -- "$@" "virtiofsd"          # Virtio-fs vhost-user device daemon
set -- "$@" "virt-manager"       # Desktop application for managing virtual machines
set -- "$@" "imagemagick"        # Image manipulation programs -- binaries
set -- "$@" "keepassxc-minimal"  # Cross Platform Password Manager
set -- "$@" "mpv"                # Video player based on MPlayer/mplayer2
set -- "$@" "picard"             # Next-Generation MusicBrainz audio files tagger
set -- "$@" "gimp"               # GNU Image Manipulation Program

exec apt-get -y install "$@"
