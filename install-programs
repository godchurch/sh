#!/bin/bash

if (( "$EUID" > 0 )); then
    printf "E: Permission denied\n" >&2
    exit 1
fi

set -e

CLI=(neovim
     tmux
     git
     make
     m4
     ffmpeg
     curl
     aria2)

GUI=(mpv
     keepassxc
     qbittorrent
     gimp
     audacity)

ARCHIVE=(p7zip
         p7zip-full
         unar)

VIRTUAL=(qemu-system-x86
         libvirt-daemon
         libvirt-clients
         virt-manager
         bridge-utils)

MISC=(heif-gdk-pixbuf)

PROGRAMS=("${CLI[@]}"
          "${GUI[@]}"
          "${ARCHIVE[@]}"
          "${VIRTUAL[@]}"
          "${MISC[@]}")

SNAP=(freecad
      multipass
      prusa-slicer)

apt-get --assume-yes install "${PROGRAMS[@]}"
snap install "${SNAP[@]}"
