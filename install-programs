#!/bin/bash

if (( "$EUID" > 0 )); then
    printf "E: Permission denied\n" >&2
    exit 1
fi

CLI=(neovim
     tmux
     git
     make
     m4
     ffmpeg
     curl)

GUI=(mpv
     keepassxc
     gimp)

ARCHIVE=(p7zip
         p7zip-full
         unar)

VIRTUAL=(qemu-system-x86
         libvirt-daemon
         libvirt-clients
         virt-manager
         bridge-utils)

PROGRAMS=("${CLI[@]}"
          "${GUI[@]}"
          "${ARCHIVE[@]}"
          "${VIRTUAL[@]}")

exec apt-get --assume-yes install "${PROGRAMS[@]}"
